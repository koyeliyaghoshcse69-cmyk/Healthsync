# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB=healthsync

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-very-secure-jwt-secret-change-this-in-production

# Email Configuration (for password reset)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Frontend URL for CORS (adjust for your deployment)
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=4000
NODE_ENV=development

# Socket.IO (set to 'true' for long-running servers, 'false' for serverless)
ENABLE_SOCKETS=true

# Groq API (for AI features)
GROQ_API_KEY=your-groq-api-key

# SerpAPI (for research paper lookups)
SERPAPI_API_KEY=your-serpapi-key
